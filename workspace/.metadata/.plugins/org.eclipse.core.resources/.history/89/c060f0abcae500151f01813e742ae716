			  h1[i] = numbers[i];
			  h2[i] = numbers[i + len/2 -1];
		  }
		  
		  
	  } else {
		  //odd
		  
	  }
	  
	  int j;
	  for(j = 0; j < res.length; j++) {
		  
	  }
  }
  
}